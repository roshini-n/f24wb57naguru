extends layout

block content
  h1= title
  h1 Roshini Naguru
  p Welcome to my page. 
  a(href="/relics") View Relics Search Results<br>
  a(href="/grid") View Grid<br>
  a(href="/pick") View RandomItem

  p Gracias for visiting my page 
  button(type="button", class="btn btn-outline-info", onclick="boost()") Sample Button
  div(id="boost") Add in extra.

  script.
    let value = 0;
    let amt = 3;
    
    function boost() {
      amt += 1;
      value += amt;
      document.getElementById("boost").innerText = `Boosted ${value} by ${amt}.`;
    }
